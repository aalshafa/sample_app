<div id="box"> 
      <div class="block" id="block-signup">
        <h2>Edit user</h2>
        <div class="content">
<%= form_for(@user , :html => { :class => "form" }) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
    <div class="group wat-cf">
    		 <div class="left">
    		 	<%= f.label :name , {:class => "label"} %>
    		 </div>
    		<div class="right">
    			<%= f.text_field :name , {:class =>"text_field"} %>
    		  	<span class="description">Ex: example-user</span>
            </div>
    </div>
  	<div class="group wat-cf">
  		<div class="left">
    		<%= f.label :email , {:class => "label"} %>
   		</div>
    	<div class="right">
   			<%= f.text_field :email , {:class =>"text_field"} %>
   			<span class="description">Ex: test@example.com</span>
   		</div>
  	</div>
  	<div class="group wat-cf">
  		<div class="left">
    		<%= f.label :password , {:class => "label"} %>
    	</div>
    	<div class="right">
    		<%= f.password_field :password , {:class =>"text_field"} %>
    		<span class="description">Ex: abc123</span>
  		</div>
  	</div>
  	<div class="group wat-cf">
  		<div class="left">
    		<%= f.label :password_confirmation, "Confirmation" , {:class => "label"}%>
    	</div>
    	<div class="right">
    		<%= f.password_field :password_confirmation , {:class =>"text_field"} %>
  		</div>
  	</div>
  	<div class="group navform wat-cf">
    	 <%= f.submit "Update" , {:class =>"button"}  %>
 	</div>
<% end %>

<div>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails">Change Profile Picture</a>
</div>

